#include<stdio.h>
int binary_search(int arr[], int ele, int low, int high)
{
  int mid;
  if (high >= low) 
  {
    mid=low+(high-low)/2;//mid element of the array
    if (arr[mid] == ele)// if it is in the mid,then return the value
      return mid;
    if (arr[mid] > ele)
      return binary_search(arr, ele, low, mid - 1);//searching in the left half
    return binary_search(arr, ele, mid + 1, high); //searching the right half
  }
  return -1;
}

int main() 
{
  int arr[10],n,search,i;
  printf("Enter number of elements\n");
  scanf("%d", &n);
  printf("Enter %d integers\n", n);
  for (i = 0;i<n;i++)
  {
  scanf("%d", &arr[i]);
  }
  printf("Enter value to find\n");
  scanf("%d", &search);
  int res = binary_search(arr,search,0,n-1);
  if (res == -1)
    printf("element is not in the array");
  else
    printf("element is found at index %d", res);
}
